<%= simple_form_for(@search_hotel, :html => {:class => 'form-horizontal'}) do |f| %>

    <%= f.input :city, label: 'Where ', :input_html => {:class => "span6", :maxlength => 25, :size => 25}, placeholder: 'City' %>

    <%= f.input :min_daily_rate, label: 'Daily Rate ($) ', :input_html => {:maxlength => 10, :size => 15}, as: :string, required: false, placeholder: 'Minimum' %> - <%= f.input :max_daily_rate, label: false, :input_html => {:maxlength => 10, :size => 15}, as: :string, required: false, placeholder: 'Maximum' %>

    <%= f.input :min_star_rating, label: 'Star Rating ', required: false, collection: 1..5 %> - <%= f.input :max_star_rating, label: false, required: false, collection: 1..5  %>

  <%= f.submit 'Search'%>
<% end %>
